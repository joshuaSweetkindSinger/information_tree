<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Type</th>
    <th>Parent</th>
    <th>Rank</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.id %></td>
    <td><%= node.type_id %></td>
    <td><%= node.parent_id %></td>
    <td><%= node.rank %></td>
    <td><%= node.content %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

